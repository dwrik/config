# aliases
alias l="lsd --color=always"
alias ls="lsd --color=always"
alias ll="lsd -l --color=always"
alias la="lsd -a --color=always"
alias lla="lsd -la --color=always"
alias grep="grep --color=always"
alias diff="diff --color=always"
alias vim="TERM=\"xterm-256color\" nvim"
alias nvim="TERM=\"xterm-256color\" nvim"
alias weather="curl wttr.in"
alias youtube="youtube-dl -f bestvideo+bestaudio/best -o \"%(title)s.%(ext)s\""

# enable vi mode
# set -o vi

# set TERM variable
export TERM="cygwin"
